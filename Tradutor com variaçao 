<html>
  <meta http-equiv="Content-Type" content="text/html;charset=UTF-8">
  <script>
    var idioma = prompt("Favor digitar o codigo do IDIOMA")
    var variacao = prompt("Favor digitar a variação")

    if (idioma == "pt") && (variacao == "br || variacao == "pt") {
      alert("olá")
    } else if (idioma == "en" && variacao == "us") {
      alert("hi")
    } else if (idioma == "en && variacao == "gb") {
      alert("hello")
    } else {
      alert("Idioma e /ou variação nao reconhecido(s)")
    }
  </script>
</html>


//     en-us = hi\cb1 \
//     en-gb = hello\cb1 \


//   (true ou false)   (&& (and)         true ou false      )
// (idioma == "pt") (&& variacao == "br" || variacao == "pt")
}